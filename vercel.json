{
  "functions": {
    "api/events/[slug].js": {
      "maxDuration": 30
    },
    "api/web-push-subscribe.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/admin", "destination": "/admin/" },
    { "source": "/publicar-evento", "destination": "/publicar-evento.html" },
    { "source": "/events/schema.jsonld", "destination": "/api/events/schema.js" },
    {
      "source": "/:slug([a-zA-Z0-9-]+)",
      "destination": "/api/events/[slug].js"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, stale-while-revalidate=30"
        }
      ]
    }
  ]
}
