{
  "functions": {
    "api/events/*": {
      "maxDuration": 30
    },
    "api/web-push-subscribe.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/admin", "destination": "/admin/" },
    { "source": "/events/schema.jsonld", "destination": "/api/events/schema.js" },
    { "source": "/sitemap.xml", "destination": "/api/sitemap.js" },
    {
      "source": "/lugar/:locality/",
      "destination": "/api/[locality].js"
    },
    {
      "source": "/eventos-(de-)?:when(hoy|esta-semana|este-mes)/",
      "destination": "/api/events/by-time/[when].js"
    },
    {
      "source": "/:slug([a-zA-Z0-9-]+-[a-zA-Z0-9-]+-.+-.+-.+-?.*h?)",
      "destination": "/api/events/by-slug/[slug].js"
    }
  ],
  "redirects": [
    {
      "source": "/lugar/traslasierra/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/:query(.+%20.*)",
      "destination": "/?q=:query",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, stale-while-revalidate=60"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800, stale-while-revalidate=604800"
        }
      ]
    }
  ]
}
